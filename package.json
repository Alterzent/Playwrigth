{
  "name": "playwrigth-automation-framework",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Playwright Automation Framework using Cucumber and TypeScript",
  "main": "index.js",
  "scripts": {
    "pretest": "tsc --project ./tsconfig.json",
    "test": "cucumber-js -p default",
    "test:chrome": "cucumber-js -p chrome",
    "test:headless": "cucumber-js -p headless",
    "install:browsers": "npx playwright install",
    "clean": "rmdir /s /q dist reports test-results 2>nul || echo Carpetas limpiadas",
    "compile": "tsc",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"step-definitions/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"step-definitions/**/*.ts\" --fix",
    "report": "node scripts/generate-report.js",
    "test:report": "npm run test:headless && npm run report",
    "open:report": "start reports/cucumber-report.html",
    "analyze": "node scripts/analyze-report.js",
    "test:analyze": "npm run test:headless && npm run analyze"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "framework"
  ],
  "author": "Alterzent",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/html-formatter": "^22.0.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.39.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cucumber-html-reporter": "^7.2.0",
    "eslint": "^9.38.0",
    "jscpd": "^4.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.46.2"
  }
}
